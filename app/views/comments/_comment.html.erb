<div id="<%= dom_id(comment) %>" class="pt-3">
  
  <div class = "d-flex">
    <strong><%= comment.owner.username%></strong>

    <p class ="text-muted ml-2">
      <%= time_ago_in_words(comment.created_at) %> ago
    </p>
  </div>

  <div>
    <%= comment.body %>
  </div>

  <div class = "d-flex">
    <div class ="text-muted">
      <i class="far fa-thumbs-up"></i> 0 
    </div>

    <div class ="text-muted">
      <%= link_to "Reply", new_comment_path(), class: "text-muted ml-2" %>
    </div>


    <p class ="text-muted ml-2">
      Report
    </p>

    <% if current_user == comment.owner %>
      <%= link_to "Edit", edit_comment_path(comment), class: "text-muted ml-2" %>
    <% end %>


  </div>

</div>