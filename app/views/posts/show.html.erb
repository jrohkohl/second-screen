<div class="container">

  <h3><%= @post.title %></h3>
  <p class ="text-muted">
    <%= time_ago_in_words(@post.created_at) %> ago
  </p>

  <p> <%=@post.body%> </p>
  <div class>
    <a class="twitter-timeline" data-width="300" data-height="300" data-dnt="true" href="https://twitter.com/RussoHockey?ref_src=twsrc%5Etfw">Tweets</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  </div>

</div>

<div id="comments-container" class="container mt-5">
  
  <h6 class="border-bottom border-gray pb-2"><i class="far fa-comment-alt"></i> <%= pluralize(@post.comments_count, "Comment")%></h6>
  <%= render "comments/form", comment: @post.comments.build %>

  <% @post.comments.parent_comments.by_posted_date.limit(50).each do |c| %>
    <div class = "border-bottom border-gray mb-2">

      <%= render "comments/comment", comment: c %>

    </div>
  <% end %>

  <% if @post.comments_count > 50 %>
    <small class="d-block mt-3">
      <a href="#">Show More Comments</a>
    </small>
  <% end %>
  
</div>